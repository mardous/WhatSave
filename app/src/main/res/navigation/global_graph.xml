<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/global_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.simplified.wsstatussaver.fragments.MainFragment"
        android:label="MainFragment"/>

    <fragment
        android:id="@+id/playbackFragment"
        android:name="com.simplified.wsstatussaver.fragments.playback.PlaybackFragment"
        android:label="PlaybackFragment">
        <argument
            android:name="statuses"
            app:argType="com.simplified.wsstatussaver.model.Status[]" />
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
</navigation>